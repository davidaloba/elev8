{
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard",
    "next/core-web-vitals"
  ],
  "rules": {
    "react/no-unescaped-entities": "off",
    "@next/next/no-page-custom-font": "off",
    "quotes": [
      1,
      "single"
    ],
    "no-undef": 1,
    "no-unused-vars": 1,
    "no-unused-expressions": 1
  }
}